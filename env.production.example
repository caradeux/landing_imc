# Variables de entorno para producción - IMC Servicios Chile SpA
# Configuración optimizada para Coolify deployment

# ============================================
# CONFIGURACIÓN DE APLICACIÓN
# ============================================
NODE_ENV=production
PORT=8080

# ============================================
# CONFIGURACIÓN DE NGINX
# ============================================
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
NGINX_WORKER_RLIMIT_NOFILE=65535

# ============================================
# CONFIGURACIÓN DE EMAIL (Nodemailer)
# ============================================
SMTP_HOST=mail.imcsonline.online
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=contacto@imcsonline.online
SMTP_PASS=Marcelo2025..
SMTP_TLS_REJECT_UNAUTHORIZED=false

# ============================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================
# Headers de seguridad
SECURITY_HEADERS_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# ============================================
# CONFIGURACIÓN DE CACHE
# ============================================
# Cache de archivos estáticos (en segundos)
STATIC_CACHE_MAX_AGE=31536000
HTML_CACHE_MAX_AGE=3600

# ============================================
# CONFIGURACIÓN DE MONITOREO
# ============================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ============================================
# CONFIGURACIÓN DE LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# ============================================
# CONFIGURACIÓN DE PERFORMANCE
# ============================================
# Compresión Gzip
GZIP_ENABLED=true
GZIP_MIN_LENGTH=1024
GZIP_COMP_LEVEL=6

# ============================================
# CONFIGURACIÓN DE COOLIFY
# ============================================
COOLIFY_MANAGED=true
COOLIFY_APPLICATION_ID=imc-servicios-chile
COOLIFY_VERSION=1.0.0

# ============================================
# CONFIGURACIÓN DE DOMINIO
# ============================================
# Dominio principal (configurar según tu dominio)
DOMAIN=192.168.1.12
PORT_EXTERNAL=8080

# ============================================
# CONFIGURACIÓN DE RECURSOS
# ============================================
# Límites de memoria y CPU
MEMORY_LIMIT=256M
CPU_LIMIT=0.5
MEMORY_RESERVATION=128M
CPU_RESERVATION=0.25

# ============================================
# CONFIGURACIÓN DE RED
# ============================================
# DNS servers
DNS_SERVER_1=8.8.8.8
DNS_SERVER_2=8.8.4.4

# ============================================
# CONFIGURACIÓN DE SSL/TLS (para futuro)
# ============================================
# SSL_ENABLED=false
