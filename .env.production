# Production Environment Variables for IMC Servicios Chile SpA
# Optimized for Coolify deployment

# Application Environment
NODE_ENV=production
REACT_APP_ENV=production

# Build Configuration
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false
CI=true

# Nginx Configuration
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
NGINX_CLIENT_MAX_BODY_SIZE=16M

# Security Configuration
NGINX_SERVER_TOKENS=off
NGINX_HIDE_VERSION=true

# Performance Configuration
NGINX_GZIP=on
NGINX_GZIP_COMP_LEVEL=6
NGINX_SENDFILE=on
NGINX_TCP_NOPUSH=on
NGINX_TCP_NODELAY=on

# Cache Configuration
NGINX_STATIC_CACHE_EXPIRES=1y
NGINX_HTML_CACHE_EXPIRES=1h
NGINX_KEEPALIVE_TIMEOUT=65

# Coolify Configuration
COOLIFY_HOST=192.168.1.12
COOLIFY_PORT=8000
COOLIFY_APP_NAME=imc-servicios-chile

# Docker Configuration
DOCKER_IMAGE_NAME=imc-servicios-chile:latest
DOCKER_CONTAINER_NAME=imc-website
DOCKER_NETWORK=coolify

# Resource Limits
DOCKER_MEMORY_LIMIT=256M
DOCKER_CPU_LIMIT=0.5
DOCKER_MEMORY_RESERVATION=128M
DOCKER_CPU_RESERVATION=0.25

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40s

# Logging Configuration
LOG_LEVEL=warn
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3

# SEO Configuration (for build time)
REACT_APP_SITE_NAME="IMC Servicios Chile SpA"
REACT_APP_SITE_DESCRIPTION="Empresa líder en construcción industrial y servicios especializados en Chile"
REACT_APP_SITE_URL="http://192.168.1.12:8080"
REACT_APP_SITE_KEYWORDS="construcción industrial, servicios especializados, Chile, IMC"

# Contact Information (for build time)
REACT_APP_COMPANY_NAME="IMC Servicios Chile SpA"
REACT_APP_COMPANY_EMAIL="contacto@imcservicios.cl"
REACT_APP_COMPANY_PHONE="+56 2 2345 6789"
REACT_APP_COMPANY_ADDRESS="Santiago, Chile"

# Social Media (for build time)
REACT_APP_FACEBOOK_URL=""
REACT_APP_LINKEDIN_URL=""
REACT_APP_INSTAGRAM_URL=""

# Analytics (if needed)
REACT_APP_GA_TRACKING_ID=""
REACT_APP_GTM_ID=""

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_QUOTE_MODAL=true
REACT_APP_ENABLE_TESTIMONIALS=true

# API Configuration (if needed in the future)
REACT_APP_API_BASE_URL=""
REACT_APP_API_TIMEOUT=10000

# Maintenance Mode
REACT_APP_MAINTENANCE_MODE=false
REACT_APP_MAINTENANCE_MESSAGE="Sitio en mantenimiento. Vuelve pronto."