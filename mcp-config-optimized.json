{
    "mcpServers": {
      "playwright-smithery": {
        "type": "stdio",
        "command": "npx",
        "args": [
          "-y",
          "@smithery/cli@latest",
          "run",
          "@executeautomation/playwright-mcp-server",
          "--key",
          "002e0e92-93ad-4bbc-9837-f0d9e6538951",
          "--profile",
          "ltd-nightingale-PZwSrQ"
        ],
        "env": {},
        "disabled": false,
        "autoApprove": [
          "playwright_navigate",
          "playwright_screenshot",
